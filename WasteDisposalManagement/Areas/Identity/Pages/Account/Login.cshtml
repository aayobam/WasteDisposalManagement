@page
@model LoginModel



<h1>@ViewData["Title"]</h1>

<div class="login">
    <div class="column1">
        <div class="login-guide">
            <h4>Login to your dashboard</h4>
        </div>
 
        <form id="account" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" id="email-label"></div>

            <div class="form-floating">
                <input asp-for="Input.Email" id="login-email" autocomplete="username" placeholder="example@mail.com" aria-required="true" />
                <span asp-validation-for="Input.Email" id="email-label"></span>
            </div>

            <div class="form-floating">
                <input asp-for="Input.Password" id="login-password" autocomplete="current-password" placeholder="Enter Password" aria-required="true" />
                <span asp-validation-for="Input.Password" id="password-label"></span>
            </div>

            <div id="terms">
                <div class="checkbox">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div><br>

            <div id="terms">
                <label for="terms">
                    Do not have an account?
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Click here to Register</a> or <a id="forgot-password" asp-page="./ForgotPassword">Forgot password?</a> or <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                </label>
            </div><br>

            <input type="submit" value="Login" id="login-btn" name="login-btn">
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
