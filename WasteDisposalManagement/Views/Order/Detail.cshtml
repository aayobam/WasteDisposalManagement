@model WasteDisposalManagement.ViewModels.PaymentModel

@{
    Layout = "_Base";
}


@if (ViewBag.status == true)
{
    <div class="alert-success">
        <h1>@ViewBag.message</h1>
    </div>
}
else
{
    <div class="alert-info">
        <h1>@ViewBag.message</h1>
    </div>
}

<div class="order-container">
    <div class="head">
        <img src="~/images/interswitch_logo.svg" alt="an image here" srcset="">
        <div class="order-data">
            <p>@Model.Name</p>
        </div>
    </div>
    <hr>
    <div class="surchage">
        <p>₦ @Model.Price</p>
        <p>surcharge ₦00.00</p>
    </div>

    <form asp-controller="Order" asp-action="Detail" method="post" enctype="multipart/form-data">
        <input asp-for="@Model.Name" hidden>

        <input asp-for="@Model.Price" hidden>

        <input asp-for="@Model.DurationInDays" hidden>

        <input asp-for="@Model.CardNumber" id="card-number" placeholder="Card Number">
        <span asp-validation-for="CardNumber" id="email-label"></span><br>
        

        <input asp-for="@Model.Expiry" id="expiry-date" placeholder="Expiry date (MM / YY)">
        <span asp-validation-for="Expiry" id="email-label"></span><br>

        <input asp-for="@Model.Cvv" id="cvv" placeholder="CVV">
        <span asp-validation-for="Cvv" id="email-label"></span><br>

        <input asp-for="@Model.Pin" id="pin" placeholder="PIN">
        <span asp-validation-for="Pin" id="email-label"></span><br>

        <input type="submit" id="payment-btn" value="Make Payment"><br>
    </form>
</div>
