@model IEnumerable<WasteDisposalManagement.Models.Order>
@{
    ViewData["Title"] = "Orders";
    Layout = "_Dashboard";
}


<h1 style="margin-bottom:-10px">Orders</h1>
<div class="dashboard">
    <section id="main">
        <div class="board">
            <table class="table" width="100%">
                <thead>
                    <tr>
                        <td>ORDER ID</td>
                        <td>SERVICE NAME</td>
                        <td>PAYMENT STATUS</td>
                        <td>ORDER STATUS</td>
                        <td>REFERENCE NO</td>
                        <td>START DATE</td>
                        <td>END DATE</td>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td class="users">
                                <p>@order.OrderId</p>
                            </td>

                            <td class="title">
                                <p>@order.Services.Name</p>
                            </td>

                            <td class="status">
                                <p>@order.PaymentStatus</p>
                            </td>

                            <td class="status">
                                <p>@order.OrderStatus</p>
                            </td>

                            <td class="role">
                                <p>@order.ReferenceNo</p>
                            </td>

                            <td class="role">
                                <p>@order.StartDate</p>
                            </td>

                            <td class="role">
                                <p>@order.EndDate</p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </section>
</div>
